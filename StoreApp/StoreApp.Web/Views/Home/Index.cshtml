@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        <vc:categories-list />
    </div>
    <div class="col-md-9">
        @if (Model.Products.Count() == 0)
        {
            <p>Ürün bulunamadı!</p>
        }

        @foreach (var p in Model.Products)
        {
            <div class="card card-outline-secondary my-2 p-2">
                <div class="d-flex justify-content-between">
                    <div class="">
                        <h4>@p.Name</h4>
                        <p>@p.Description</p>
                    </div>
                    <div>
                        <span class="badge badge-pill badge-success">@p.Price TL</span>
                    </div>
                </div>
            </div>
        }
        <div class="btn-group my-2"
            page-model="@Model.PageInfo" 
            page-action="Index"
            page-class="btn"
            page-class-link="btn-outline-secondary"
            page-class-active="btn-secondary"
        ></div>
    </div>
</div>
